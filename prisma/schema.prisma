generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vet {
  id String       @id @default(cuid())

  email String     @unique

  username String  @unique
  password String @unique

  name String
  specialty Specialty  @default(CAT_DOG)

  appointments Appoinment[]
}

model Owner {
  id String       @id @default(cuid())
  
  email String     @unique

  username String  @unique
  password String @unique

  name String

  pets Pet[]
}

model Pet {
  id String       @id @default(cuid())
  
  type AnimalType @default(UNKNOWN)

  name String
  breed String 
  color String

  age Int
  weight Decimal

  ownerID                String
  owner                  Owner @relation(fields: [ownerID], references: [id]) 

  appointments Appoinment[]
}

model Appoinment {
  id String @id @default(cuid())

  date DateTime
  hour String
  status Boolean @default(false) 
  examination Evaluation @default(ROUTINE)
  
  observations String
  
  vetID                String
  vet                  Vet @relation(fields: [vetID], references: [id]) 

  petID                String  
  pet                  Pet @relation(fields: [petID], references: [id]) 
}

enum AnimalType {
  CAT
  DOG
  UNKNOWN
}

enum Specialty {
  CAT
  DOG
  CAT_DOG
}

enum Evaluation {
  ROUTINE
  URGENT
  SURGERY
}


